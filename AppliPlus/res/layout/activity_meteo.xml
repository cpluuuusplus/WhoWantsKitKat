<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/backmotif"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/activity_meteo_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:text="@string/to_be_defined"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/activity_meteo_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:scaleX="2.0"
            android:scaleY="2.0" />

        <TableLayout
            android:id="@+id/activity_meteo_table1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_vertical"
            android:layout_weight="0.2" >

            <TableRow
                android:id="@+id/activity_meteo_table1_row_latitude"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="8dp" >

                <TextView
                    android:id="@+id/activity_meteo_table1_row_latitude_desc"
                    android:layout_width="fill_parent"
                    android:layout_marginRight="20dp"
                    android:gravity="left"
                    android:text="Latitude"
                    android:textColor="@color/silver" />

                <TextView
                    android:id="@+id/activity_meteo_table1_row_latitude_info"
                    android:layout_width="fill_parent"
                    android:gravity="right"
                    android:text="@string/to_be_defined"
                    android:textColor="@color/white" />
            </TableRow>

            <TableRow
                android:id="@+id/activity_meteo_table1_row_longitute"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="8dp" >

                <TextView
                    android:id="@+id/activity_meteo_table1_row_longitute_desc"
                    android:layout_width="fill_parent"
                    android:layout_marginRight="20dp"
                    android:gravity="left"
                    android:text="Longitude"
                    android:textColor="@color/silver" />

                <TextView
                    android:id="@+id/activity_meteo_table1_row_longitude_info"
                    android:layout_width="fill_parent"
                    android:gravity="right"
                    android:text="@string/to_be_defined"
                    android:textColor="@color/white" />
            </TableRow>

            <TableRow
                android:id="@+id/activity_meteo_table1_row_sunrise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="8dp" >

                <TextView
                    android:id="@+id/activity_meteo_table1_row_sunrise_desc"
                    android:layout_width="fill_parent"
                    android:gravity="left"
                    android:text="Heure de levé du soleil"
                    android:textColor="@color/silver" />

                <TextView
                    android:id="@+id/activity_meteo_table1_row_sunrise_info"
                    android:layout_width="fill_parent"
                    android:gravity="right"
                    android:text="@string/to_be_defined"
                    android:textColor="@color/white" />
            </TableRow>

            <!-- sunset -->

            <TableRow
                android:id="@+id/activity_meteo_table1_row_sunset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="8dp" >

                <TextView
                    android:id="@+id/activity_meteo_table1_row_sunset_desc"
                    android:layout_width="fill_parent"
                    android:layout_marginRight="20dp"
                    android:gravity="left"
                    android:text="Heure de couché du soleil"
                    android:textColor="@color/silver" />

                <TextView
                    android:id="@+id/activity_meteo_table1_row_sunset_info"
                    android:layout_width="fill_parent"
                    android:gravity="left"
                    android:text="@string/to_be_defined"
                    android:textColor="@color/white" />
            </TableRow>
        </TableLayout>

        <TextView
            android:id="@+id/activity_meteo_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:padding="15dp"
            android:text="@string/to_be_defined"
            android:textColor="@color/black_color"
            android:textSize="15sp" />

        <TableLayout
            android:id="@+id/activity_meteo_table2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_vertical" >

            <TableRow
                android:id="@+id/activity_meteo_table2_row_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="8dp" >

                <TextView
                    android:id="@+id/activity_meteo_table2_row_main_desc"
                    android:layout_width="fill_parent"
                    android:layout_marginRight="20dp"
                    android:gravity="left"
                    android:text="Conditions générales"
                    android:textColor="@color/silver" />

                <TextView
                    android:id="@+id/activity_meteo_table2_row_main_info"
                    android:layout_width="fill_parent"
                    android:gravity="right"
                    android:text="@string/to_be_defined"
                    android:textColor="@color/white" />
            </TableRow>

            <TableRow
                android:id="@+id/activity_meteo_table2_row_clouds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="8dp" >

                <TextView
                    android:id="@+id/activity_meteo_table2_row_clouds_desc"
                    android:layout_width="fill_parent"
                    android:gravity="left"
                    android:text="Densité nuageuse"
                    android:textColor="@color/silver" />

                <TextView
                    android:id="@+id/activity_meteo_table2_row_clouds_info"
                    android:layout_width="fill_parent"
                    android:gravity="right"
                    android:text="@string/to_be_defined"
                    android:textColor="@color/white" />
            </TableRow>

            <!-- température -->

            <TableRow
                android:id="@+id/activity_meteo_table2_row_temperature_moy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="8dp" >

                <TextView
                    android:id="@+id/activity_meteo_table2_row_temperature_moy_desc"
                    android:layout_width="fill_parent"
                    android:gravity="left"
                    android:text="@string/meteo_tc"
                    android:textColor="@color/silver" />

                <TextView
                    android:id="@+id/activity_meteo_table2_row_temperature_moy_info"
                    android:layout_width="fill_parent"
                    android:gravity="right"
                    android:text="@string/to_be_defined"
                    android:textColor="@color/white" />
            </TableRow>

            <TableRow
                android:id="@+id/activity_meteo_row_nuages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="8dp" >

                <TextView
                    android:id="@+id/desc_nuages"
                    android:layout_width="fill_parent"
                    android:gravity="left"
                    android:text="Taux d\ ennuagement"
                    android:textColor="@color/silver" />

                <TextView
                    android:id="@+id/info_nuages"
                    android:layout_width="fill_parent"
                    android:gravity="right"
                    android:text="@string/to_be_defined"
                    android:textColor="@color/white" />
            </TableRow>

            <TableRow
                android:id="@+id/activity_meteo_table2_row_humidity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="8dp" >

                <TextView
                    android:id="@+id/activity_meteo_table2_row_humidity_desc"
                    android:layout_width="fill_parent"
                    android:gravity="left"
                    android:text="Taux d\ humidité"
                    android:textColor="@color/silver" />

                <TextView
                    android:id="@+id/activity_meteo_table2_row_humidity_info"
                    android:layout_width="fill_parent"
                    android:gravity="right"
                    android:text="@string/to_be_defined"
                    android:textColor="@color/white" />
            </TableRow>

            <TableRow
                android:id="@+id/activity_meteo_table2_row_rain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="8dp" >

                <TextView
                    android:id="@+id/activity_meteo_table2_row_rain_desc"
                    android:layout_width="fill_parent"
                    android:gravity="left"
                    android:text="Niveau de pluie"
                    android:textColor="@color/silver" />

                <TextView
                    android:id="@+id/activity_meteo_table2_row_rain_info"
                    android:layout_width="fill_parent"
                    android:gravity="right"
                    android:text="@string/to_be_defined"
                    android:textColor="@color/white" />
            </TableRow>

            <TableRow
                android:id="@+id/activity_meteo_table2_row_pressure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="8dp" >

                <TextView
                    android:id="@+id/activity_meteo_table2_row_pressure_desc"
                    android:layout_width="fill_parent"
                    android:gravity="left"
                    android:text="Pression atmosphérique"
                    android:textColor="@color/silver" />

                <TextView
                    android:id="@+id/activity_meteo_table2_row_pressure_info"
                    android:layout_width="fill_parent"
                    android:gravity="right"
                    android:text="@string/to_be_defined"
                    android:textColor="@color/white" />
            </TableRow>

            <!-- vent -->

            <TableRow
                android:id="@+id/activity_meteo_table2_row_wind"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="8dp" >

                <TextView
                    android:id="@+id/activity_meteo_table2_row_wind_desc"
                    android:layout_width="fill_parent"
                    android:gravity="left"
                    android:text="Vitesse du vent"
                    android:textColor="@color/silver" />

                <TextView
                    android:id="@+id/activity_meteo_table2_row_wind_info"
                    android:layout_width="fill_parent"
                    android:gravity="right"
                    android:text="@string/to_be_defined"
                    android:textColor="@color/white" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

</ScrollView>