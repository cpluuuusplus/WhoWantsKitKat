<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical" >

    <!-- Titre et ville -->

    <TextView
        android:id="@+id/afficher_localite_meteo"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:text="@string/to_be_defined"
        android:textColor="@color/white"
        android:textSize="15dp" />

    <!-- Info météo : temperature, pluie, vent, nuages -->

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="fill_vertical"
        android:layout_weight="0.2" >

        <!-- température -->

        <TableRow
            android:id="@+id/row_meteo_temperature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="8dp" >

            <TextView
                android:id="@+id/desc_temp"
                android:layout_width="fill_parent"
                android:gravity="left"
                android:text="@string/meteo_tc"
                android:textColor="@color/silver" />

            <TextView
                android:id="@+id/info_temp"
                android:text="@string/to_be_defined"
                android:textColor="@color/white" />
        </TableRow>

        <!-- pluie -->

        <TableRow
            android:id="@+id/row_meteo_pluie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="8dp" >

            <TextView
                android:id="@+id/desc_pluie"
                android:layout_width="fill_parent"
                android:gravity="left"
                android:text="@string/meteo_rain"
                android:textColor="@color/silver" />

            <TextView
                android:id="@+id/info_pluie"
                android:layout_width="fill_parent"
                android:text="@string/to_be_defined"
                android:textColor="@color/white" />
        </TableRow>
        <!-- vent -->

        <TableRow
            android:id="@+id/row_meteo_vent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="8dp" >

            <TextView
                android:id="@+id/desc_vent"
                android:layout_width="fill_parent"
                android:gravity="left"
                android:text="@string/meteo_wind"
                android:textColor="@color/silver" />

            <TextView
                android:id="@+id/info_vent"
                android:layout_width="fill_parent"
                android:text="@string/to_be_defined"
                android:textColor="@color/white" />
        </TableRow>

        <!-- nuages -->

        <TableRow
            android:id="@+id/row_meteo_nuages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="8dp" >

            <TextView
                android:id="@+id/desc_nuages"
                android:layout_width="fill_parent"
                android:gravity="left"
                android:text="@string/meteo_clouds"
                android:textColor="@color/silver" />

            <TextView
                android:id="@+id/info_nuages"
                android:gravity="left"
                android:text="@string/to_be_defined"
                android:textColor="@color/white" />
        </TableRow>

        <!-- pression -->

        <TableRow
            android:id="@+id/row_pressure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="8dp" >

            <TextView
                android:id="@+id/desc_pressure"
                android:layout_width="fill_parent"
                android:gravity="left"
                android:text="@string/desc_pressure"
                android:textColor="@color/silver" />

            <TextView
                android:id="@+id/info_pressure"
                android:layout_width="fill_parent"
                android:gravity="left"
                android:text="@string/to_be_defined"
                android:textColor="@color/white" />
        </TableRow>

        <TableRow
            android:id="@+id/row_sunrise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="8dp" >

            <TextView
                android:id="@+id/desc_sunrise"
                android:layout_width="fill_parent"
                android:gravity="left"
                android:text="@string/desc_sunrise"
                android:textColor="@color/silver" />

            <TextView
                android:id="@+id/info_sunrise"
                android:layout_width="fill_parent"
                android:gravity="left"
                android:text="@string/to_be_defined"
                android:textColor="@color/white" />
        </TableRow>

        <!-- sunset -->

        <TableRow
            android:id="@+id/row_sunset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="8dp" >

            <TextView
                android:id="@+id/desc_sunset"
                android:layout_width="fill_parent"
                android:layout_marginRight="20dp"
                android:gravity="left"
                android:text="@string/desc_sunset"
                android:textColor="@color/silver" />

            <TextView
                android:id="@+id/info_sunset"
                android:layout_width="fill_parent"
                android:gravity="left"
                android:text="@string/to_be_defined"
                android:textColor="@color/white" />
        </TableRow>
    </TableLayout>
