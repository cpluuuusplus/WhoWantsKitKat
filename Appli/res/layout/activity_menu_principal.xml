<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <Button
        android:id="@+id/main_act1"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:onClick="pamplemousse"
        android:text="@string/pamp_viewer"
        android:textColor="@color/black_color" />

    <Button
        android:id="@+id/main_act2"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:onClick="geolocalisation"
        android:text="@string/geo"
        android:textColor="@color/black_color" />

    <Button
        android:id="@+id/main_act3"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:onClick="meteo"
        android:text="@string/meteo"
        android:textColor="@color/black_color" />

</LinearLayout>